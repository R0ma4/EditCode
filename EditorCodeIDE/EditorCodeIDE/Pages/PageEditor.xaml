<Page x:Class="EditorCodeIDE.Pages.PageEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EditorCodeIDE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="PageEditor" KeyDown="Page_KeyDown">

    <Grid Background="#FF232323" Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Меню -->
            <RowDefinition Height="*"/>
            <!-- Основной контент -->
            <RowDefinition Height="5"/>
            <!-- Разделитель -->
            <RowDefinition Height="200"/>
            <!-- Терминал -->
            <RowDefinition Height="Auto"/>
            <!-- Статус бар -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Левая панель -->
            <ColumnDefinition Width="5"/>
            <!-- Разделитель -->
            <ColumnDefinition Width="*"/>
            <!-- Редактор -->
            <ColumnDefinition Width="5"/>
            <!-- Разделитель -->
            <ColumnDefinition Width="250"/>
            <!-- Правая панель -->
        </Grid.ColumnDefinitions>

        <!-- Меню управление -->
        <Menu VerticalAlignment="Top" Grid.Row="0" Grid.ColumnSpan="5" Foreground="White" Background="#FF2D2D30">
            <MenuItem Header="Файлы" Foreground="White" Background="#FF2D2D30">
                <MenuItem Header="Создать" Foreground="White" Background="#FF2D2D30">
                    <MenuItem Header="Файл .cs" Foreground="White" Background="#FF2D2D30"/>
                    <MenuItem Header="Файл .cpp" Foreground="White" Background="#FF2D2D30"/>
                </MenuItem>
                <MenuItem Header="Открыть" Foreground="White" Background="#FF2D2D30"/>
                <MenuItem Header="Сохронить" Foreground="White" Background="#FF2D2D30"/>
                <MenuItem Header="Сохронить как.." Foreground="White" Background="#FF2D2D30"/>
                <MenuItem Header="Сохронить всё" Foreground="White" Background="#FF2D2D30"/>
            </MenuItem>
            <MenuItem Header="Настройки" Foreground="White" Background="#FF2D2D30">
                <MenuItem Header="Вернуть" Foreground="White" Background="#FF2D2D30"/>
                <MenuItem Header="Возратить" Foreground="White" Background="#FF2D2D30" />
            </MenuItem>
            <MenuItem Header="Git" Foreground="White" Background="#FF2D2D30" />
            <MenuItem Header="Запросы" Foreground="White" Background="#FF2D2D30">
                <MenuItem Header="Код" Foreground="White" Background="#FF2D2D30">
                    <MenuItem Header="Онализ кода и/или решения" Foreground="White" Background="#FF2D2D30"/>
                    <MenuItem Header="Очитстить решение" Foreground="White" Background="#FF2D2D30"/>
                    <MenuItem Header="Собрать решение" Foreground="White" Background="#FF2D2D30"/>
                    <MenuItem Header="Собрать проект" Foreground="White" Background="#FF2D2D30"/>
                </MenuItem>
                <MenuItem Header="Редактор" Foreground="White" Background="#FF2D2D30">
                    <MenuItem Header="Проверить версию редактора" Foreground="White" Background="#FF2D2D30"/>
                    <MenuItem Header="Проверить версию редактора" Foreground="White" Background="#FF2D2D30"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Вид" Foreground="White" Background="#FF2D2D30">
                <MenuItem Header="Верхнее меню" Foreground="White" Background="#FF2D2D30"/>
                <MenuItem Header="Список" Foreground="White" Background="#FF2D2D30"/>
                <MenuItem Header="Оброзреватель решения" Foreground="White" Background="#FF2D2D30"/>
                <MenuItem Header="Текстовый редактор" Foreground="White" Background="#FF2D2D30"/>
            </MenuItem>
            <MenuItem Header="Проект" Foreground="White" Background="#FF2D2D30">
                <MenuItem x:Name="CreateProject" Header="Создать" Foreground="White" Background="#FF2D2D30">
                    <MenuItem x:Name="ProjectCSrap" Header="Console CSharp/C# (.Net FrameWork)" Foreground="White" Background="#FF2D2D30"/>
                </MenuItem>
                <MenuItem x:Name="OpenProject" Header="Открыть" Foreground="White" Background="#FF2D2D30"/>
                <MenuItem x:Name="EndProject" Header="Последнее" Foreground="White" Background="#FF2D2D30"/>
            </MenuItem >
            <MenuItem Header="Запустить" Foreground="White" Background="#FF2D2D30" Click="RunScrept" />
            <MenuItem Header="Терминал" Foreground="White" Background="#FF2D2D30">
                <MenuItem Header="Открыть Общий Терменал" Foreground="White" Background="#FF2D2D30"/>
                <MenuItem Header="Открыть Терменал Редактора" Foreground="White" Background="#FF2D2D30"/>
                <MenuItem Header="Открыть PowerShell" Foreground="White" Background="#FF2D2D30"/>
            </MenuItem>
            <MenuItem Header="Помощь" Foreground="White" Background="#FF2D2D30">
                <MenuItem Header="Открыть GitHub Документацию" Foreground="White" Background="#FF2D2D30"/>
            </MenuItem>
        </Menu>

        <!-- Левая панель с кнопками и деревом проекта -->
        <DockPanel Grid.Row="1" Grid.Column="0" Background="#FF252526">
            <!-- Вертикальные кнопки -->
            <StackPanel DockPanel.Dock="Left" Width="50" Background="#FF2D2D30">
                <Button x:Name="FileProject" Content="📁" Width="40" Height="40" Margin="5" 
                        ToolTip="Обозреватель решений" Background="Transparent" BorderBrush="Transparent" Foreground="White"/>
                <Button x:Name="Seach" Content="🔍" Width="40" Height="40" Margin="5" 
                        ToolTip="Поиск" Background="Transparent" BorderBrush="Transparent" Foreground="White"/>
                <Button x:Name="RunAndDebug" Content="▶️" Width="40" Height="40" Margin="5" 
                        ToolTip="Запуск и отладка" Background="Transparent" BorderBrush="Transparent" Foreground="White"/>
                <Button x:Name="Pakes" Content="📦" Width="40" Height="40" Margin="5" 
                        ToolTip="Пакеты" Background="Transparent" BorderBrush="Transparent" Foreground="White"/>
            </StackPanel>

            <!-- Дерево проекта -->
            <Border Background="#FF252526" Margin="0,0,5,0">
                <GroupBox Header="Древо вашего проекта" Foreground="White" BorderBrush="#FF3E3E40" Background="#FF252526">
                    <TreeView Background="Transparent">
                        <TreeViewItem Header="MyProgect [текстовый]" Foreground="White">
                            <TreeViewItem Header="Test.txt" Foreground="White"/>
                        </TreeViewItem>
                    </TreeView>
                </GroupBox>
            </Border>
        </DockPanel>

        <!-- Разделитель левой панели -->
        <GridSplitter Grid.Row="1" Grid.Column="1" 
                     HorizontalAlignment="Stretch" 
                     VerticalAlignment="Stretch"
                     Background="#FF3E3E40"
                     Width="5"
                     ShowsPreview="True"/>

        <!-- Основная область с редактором -->
        <TabControl Grid.Row="1" Grid.Column="2" Background="Transparent" Margin="5">
            <!-- Вкладка редактора -->
            <TabItem x:Name="Filer" Header="Test.txt" Background="#FF2D2D30" Foreground="White" BorderBrush="#FF3E3E40">
                <Grid>
                    <avalon:TextEditor 
                        x:Name="TextEditor"
                        SyntaxHighlighting="SQL" 
                        ShowLineNumbers="True"
                        WordWrap="False"
                        FontFamily="Consolas"
                        FontSize="14"
                        HorizontalScrollBarVisibility="Auto"
                        VerticalScrollBarVisibility="Auto"
                        Background="#FF1E1E1E"
                        Foreground="White"/>
                </Grid>
            </TabItem>

            <!-- Вкладка пакетов -->
            <TabItem Header="Pakes" Background="#FF2D2D30" Foreground="White" BorderBrush="#FF3E3E40">
                <Grid Background="#FF1E1E1E">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая часть - управление пакетами -->
                    <StackPanel Grid.Column="0" Margin="5">
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="Поиск дополнений" Foreground="White" VerticalAlignment="Center"/>
                            <Button x:Name="Refresh" Content="🔄" Width="20" Height="20" 
                                    Background="Transparent" BorderBrush="Transparent" Foreground="White"
                                    ToolTip="Обновить" HorizontalAlignment="Right"/>
                            <Button x:Name="MenuAdder" Content="⚙️" Width="20" Height="20" 
                                    Background="Transparent" BorderBrush="Transparent" Foreground="White"
                                    ToolTip="Настройки" HorizontalAlignment="Right" Margin="5,0,0,0"/>
                        </DockPanel>
                        <TextBox Margin="0,0,0,10" Background="#FF2D2D30" Foreground="White" BorderBrush="#FF3E3E40"/>

                        <!-- Список пакетов -->
                        <ListBox Background="Transparent" Foreground="White" BorderBrush="#FF3E3E40" Height="300">
                            <ListBoxItem Content="FrameWorkAPI - Alfa 0-0-1"/>
                            <ListBoxItem Content="Pack-EditCode - 0-0-1"/>
                        </ListBox>
                    </StackPanel>

                    <!-- Разделитель внутри вкладки пакетов -->
                    <GridSplitter Grid.Column="1" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Stretch"
                                 Background="#FF3E3E40"
                                 Width="5"
                                 ShowsPreview="True"/>

                    <!-- Правая часть - браузер -->
                    <StackPanel Grid.Column="2" Margin="5,0,0,0">
                        <TextBlock Text="Быстрая установка" Foreground="White" Margin="0,0,0,5"/>
                        <Border BorderBrush="#FF3E3E40" BorderThickness="1" Height="350" Visibility="Collapsed">
                            <!-- WebBrowser будет здесь -->
                            <TextBlock Text="Загрузка..." 
                                      Foreground="Gray" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="#FF3E3E40" BorderThickness="1" Height="350">
                            <!-- WebBrowser будет здесь -->
                            <WebBrowser Source="https://github.com/R0ma4/EditCode"  VerticalAlignment="Center">
                                
                            </WebBrowser>
                        </Border>        
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Разделитель правой панели -->
        <GridSplitter Grid.Row="1" Grid.Column="3" 
                     HorizontalAlignment="Stretch" 
                     VerticalAlignment="Stretch"
                     Background="#FF3E3E40"
                     Width="5"
                     ShowsPreview="True"/>

        <!-- Правая панель (дополнительная информация) -->
        <StackPanel Grid.Row="1" Grid.Column="4" Background="#FF252526" Margin="5,0,5,0">
            <GroupBox Header="Дополнительно" Foreground="White" BorderBrush="#FF3E3E40" Background="#FF252526">
                <StackPanel>
                    <TextBlock  Text="Информация о проекте:" Foreground="White" Margin="0,5"/>
                    <TextBlock x:Name="TypeProject" Text="Тип: Консольное приложение" Foreground="LightGray" FontSize="11"/>
                    <TextBlock x:Name="language" Text="Язык: C#" Foreground="LightGray" FontSize="11"/>
                    <TextBlock x:Name="Framework" Text="Framework: .NET 6.0" Foreground="LightGray" FontSize="11"/>

                    <Rectangle Height="1" Fill="#FF3E3E40" Margin="0,10"/>

                    <TextBlock Text="Статистика:" Foreground="White" Margin="0,5"/>
                    <TextBlock Text="Файлов: 3" Foreground="LightGray" FontSize="11"/>
                    <TextBlock Text="Строк кода: 156" Foreground="LightGray" FontSize="11"/>
                    <TextBlock Text="Последнее изменение: сегодня" Foreground="LightGray" FontSize="11"/>
                </StackPanel>
            </GroupBox>

            <!-- Слайдер масштабирования -->
            <GroupBox Header="Масштаб" Foreground="White" BorderBrush="#FF3E3E40" Background="#FF252526" Margin="0,10,0,0">
                <StackPanel>
                    <Slider x:Name="ZoomSlider" 
                           Minimum="50" 
                           Maximum="500" 
                           Value="100" 
                           TickFrequency="10"
                           Margin="5"
                           ValueChanged="ZoomSlider_ValueChanged"/>
                    <TextBlock x:Name="ZoomText" 
                              Text="100%" 
                              Foreground="White" 
                              HorizontalAlignment="Center"
                              FontSize="12"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="ZoomInBtn" Content="+" Width="25" Height="25" Margin="2"
                               />
                        <Button x:Name="ZoomOutBtn" Content="-" Width="25" Height="25" Margin="2"
                               />
                        <Button x:Name="ZoomResetBtn" Content="⟲" Width="25" Height="25" Margin="2"
                               />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Горизонтальный разделитель между основной областью и терминалом -->
        <GridSplitter Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5"
                     HorizontalAlignment="Stretch" 
                     VerticalAlignment="Stretch"
                     Background="#FF3E3E40"
                     Height="5"
                     ShowsPreview="True"/>

        <!-- Терминал -->
        <TabControl Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" Background="Transparent" Margin="5,0,5,5">
            <TabItem Header="Console" Background="#FF2D2D30" Foreground="White" BorderBrush="#FF3E3E40">
                <Grid Background="#FF0C0C0C">
                    <TextBox x:Name="ConsoleOutput" 
                            FontFamily="Consolas" 
                            FontSize="12" 
                            Background="Black" 
                            Foreground="White"
                            IsReadOnly="False"
                            VerticalScrollBarVisibility="Auto"
                            TextWrapping="Wrap"
                            Text="Добро пожаловать в консоль&#x0a;> " KeyDown="EventKeyDowonDater"/>
                </Grid>
            </TabItem>

            <TabItem Header="Termenal" Background="#FF2D2D30" Foreground="White" BorderBrush="#FF3E3E40">
                <Grid Background="#FF0C0C0C">
                    <TextBox x:Name="TerminalOutput" 
                            FontFamily="Consolas" 
                            FontSize="12" 
                            Background="Black" 
                            Foreground="White"
                            IsReadOnly="False"
                            VerticalScrollBarVisibility="Auto"
                            TextWrapping="Wrap"
                            Text="&#x0a;&#x0a;C:\Users\User&gt; _"/>
                </Grid>
            </TabItem>

            <TabItem Header="PowerShell" Background="#FF2D2D30" Foreground="White" BorderBrush="#FF3E3E40">
                <Grid Background="#FF012456">
                    <TextBox x:Name="PowerShellOutput" 
                            FontFamily="Consolas" 
                            FontSize="12" 
                            Background="#FF012456" 
                            Foreground="White"
                            IsReadOnly="False"
                            VerticalScrollBarVisibility="Auto"
                            TextWrapping="Wrap"
                            Text="Windows PowerShell&#x0a;Copyright (C) Microsoft Corporation. All rights reserved.&#x0a;&#x0a;PS C:\Users\User&gt; _"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Статус бар -->
        <Border Grid.Row="4" Grid.ColumnSpan="5" Background="#FF444444" VerticalAlignment="Bottom">
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Левая часть статус бара -->
                <DockPanel Grid.Column="0">
                    <Button Content="🔧" Width="20" Height="20" Background="Transparent" BorderBrush="Transparent" Foreground="White"/>
                    <TextBlock Foreground="White" Text="Готов" VerticalAlignment="Center" Margin="10,0"/>
                </DockPanel>

                <!-- Правая часть статус бара -->
                <DockPanel Grid.Column="1">
                    <TextBlock Foreground="White" Text="UniCode: UNI-8" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="languageType" Foreground="White" Text="Язык Проекта: C#" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Foreground="White" Text="Язык: Русский" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="CursorPosition" Foreground="White" Text="Ln 1, Col 1" VerticalAlignment="Center"/>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</Page>