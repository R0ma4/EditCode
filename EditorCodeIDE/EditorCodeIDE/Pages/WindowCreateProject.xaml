<Window x:Class="EditorCodeIDE.Pages.WindowCreateProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditorCodeIDE.Pages"
        mc:Ignorable="d"
        Title="Создание нового проекта" 
        Height="550" 
        Width="900"
        MinHeight="500"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Style="{StaticResource {x:Type Window}}">

    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF252424"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3E3E40"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch"
                                              Margin="1"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3A3A3A"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#555555"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#FF1A1A1A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" 
                Background="#FF2D2D30" 
                Padding="20,16" 
                BorderBrush="#FF3E3E40" 
                BorderThickness="0,0,0,1">
            <TextBlock Text="Создание нового проекта" 
                       Foreground="White" 
                       FontSize="22" 
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель - Шаблоны -->
            <Border Grid.Column="0" 
                    Background="#FF252424" 
                    Padding="16"
                    Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Шаблоны проектов" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>

                    <Border Margin="0,0,0,12" Background="#FF3A3A3A" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔍" 
                                       Foreground="#A0A0A0" 
                                       FontSize="16"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBox x:Name="SearchBox" 
                                     Text="" 
                                     Width="Auto"
                                     MinWidth="120"
                                     VerticalContentAlignment="Center"
                                     TextChanged="SearchBox_TextChanged" >
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="0"
                                                            CornerRadius="4">
                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                      VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                    </Border>

                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ListBox x:Name="TemplatesList"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="0">


                        </ListBox>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1"
                          Width="2"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="#FF3E3E40"
                          ShowsPreview="True"
                          ResizeDirection="Columns"/>

            <!-- Правая панель - Настройки -->
            <Border Grid.Column="2" 
                    Background="#FF252424" 
                    Padding="16"
                    Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Настройки проекта -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Настройки проекта" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,20"/>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Имя проекта" 
                                       Foreground="White" 
                                       FontSize="14"
                                       Margin="0,0,0,4"/>
                            <TextBox x:Name="ProjectNameTextBox" 
                                     Text="MyProject"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Расположение" 
                                       Foreground="White" 
                                       FontSize="14"
                                       Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="LocationTextBox" 
                                         Text="C:\Projects\"/>
                                <Button Grid.Column="1" 
                                        Content="Обзор..." 
                                        Margin="8,0,0,0"
                                        Padding="12,6"
                                        Background="#FF3A3A3A"
                                        BorderBrush="#FF3E3E40"
                                        Foreground="White"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Решение" 
                                       Foreground="White" 
                                       FontSize="14"
                                       Margin="0,0,0,4"/>
                            <TextBox x:Name="SolutionNameTextBox" 
                                     Text="MySolution"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Дополнительные опции -->
                    <Expander Grid.Row="1" 
                              Header="Дополнительные параметры" 
                              Foreground="White"
                              IsExpanded="False"
                              Margin="0,10,0,0">
                        <StackPanel>
                            <CheckBox Content="Создать каталог для решения" 
                                      Foreground="White"
                                      IsChecked="True"
                                      Margin="0,8,0,0"/>
                            <CheckBox Content="Добавить в систему контроля версий" 
                                      Foreground="White"
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </Expander>

                    <!-- Кнопки действий -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                Margin="0,20,0,0">
                        <Button Content="Отмена" 
                                Padding="20,8"
                                Background="Transparent"
                                BorderBrush="#FF3E3E40"
                                Foreground="White"
                                Margin="0,0,12,0"
                                Click="CancelButton_Click"/>
                        <Button Content="Создать" 
                                Padding="20,8"
                                Background="#007ACC"
                                BorderBrush="#005A9E"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Click="CreateButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" 
                Background="#FF252424" 
                Padding="12"
                BorderBrush="#FF3E3E40" 
                BorderThickness="0,1,0,0">
            <TextBlock Text="Выберите шаблон проекта и укажите параметры" 
                       Foreground="#A0A0A0" 
                       FontSize="12"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>