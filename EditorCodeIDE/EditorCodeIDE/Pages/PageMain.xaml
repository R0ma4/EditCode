<Page x:Class="EditorCodeIDE.Pages.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EditorCodeIDE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="EditorCodeIDE - Главное меню"
      Background="#FF1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="20" BorderBrush="#FF3E3E40" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="🚀" FontSize="24" Margin="0,0,15,0"/>
                <TextBlock Text="EditorCodeIDE" Foreground="White" FontSize="24" FontWeight="Bold"/>
                <TextBlock Text="v1.0" Foreground="#FFCCCCCC" FontSize="14" VerticalAlignment="Bottom" Margin="10,0,0,2"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель - Быстрый старт -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <TextBlock Text="Быстрый старт" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,30" HorizontalAlignment="Center"/>

                <!-- Кнопки быстрых действий -->
                <Button x:Name="NewFileBtn" Content="Создать файл" 
                        Background="#FF007ACC" Foreground="White" FontSize="14" FontWeight="SemiBold"
                        Height="40" Margin="0,0,0,15" Click="ClickEvent" >
                    <Button.ToolTip>
                        <ToolTip Content="Создать новый текстовый файл"/>
                    </Button.ToolTip>
                </Button>

                <Button x:Name="OpenFileBtn" Content="Открыть файл" 
                        Background="Transparent" Foreground="White" FontSize="14" 
                        Height="40" Margin="0,0,0,15" BorderBrush="#FF007ACC" BorderThickness="1" Click="ClickEvent" >
                    <Button.ToolTip>
                        <ToolTip Content="Открыть существующий файл"/>
                    </Button.ToolTip>
                </Button>

                <Button x:Name="NewProjectBtn" Content="Создать проект" 
                        Background="Transparent" Foreground="White" FontSize="14" 
                        Height="40" Margin="0,0,0,15" BorderBrush="#FF007ACC" BorderThickness="1">
                    <Button.ToolTip>
                        <ToolTip Content="Создать новый проект"/>
                    </Button.ToolTip>
                </Button>

                <Button x:Name="OpenFolderBtn" Content="Открыть папку" 
                        Background="Transparent" Foreground="White" FontSize="14" 
                        Height="40" Margin="0,0,0,15" BorderBrush="#FF007ACC" BorderThickness="1">
                    <Button.ToolTip>
                        <ToolTip Content="Открыть папку как проект"/>
                    </Button.ToolTip>
                </Button>

                <Button x:Name="OpenEditorBtn" Content="Продолжить без кода" 
                    Background="Transparent" Foreground="White" FontSize="14" 
                    Height="40" Margin="0,0,0,15" BorderBrush="{x:Null}" BorderThickness="1" Click="ClickEvent">
                    <Button.ToolTip>
                        <ToolTip Content="Открыть папку как проект"/>
                    </Button.ToolTip>
                </Button>

                <Button x:Name="SettingsBtn" Content="Настройки" 
                        Background="Transparent" Foreground="#FFCCCCCC" FontSize="12" 
                        Height="30" Margin="0,20,0,0" BorderBrush="#FF555555" BorderThickness="1">
                    <Button.ToolTip>
                        <ToolTip Content="Настройки редактора"/>
                    </Button.ToolTip>
                </Button>
            </StackPanel>

            <!-- Разделитель -->
            <Rectangle Grid.Column="1" Width="1" Fill="#FF3E3E40" VerticalAlignment="Stretch" Margin="40,80,40,80"/>

            <!-- Правая панель - Недавние проекты и доп. информация -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <TextBlock Text="Недавние проекты" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <!-- Список недавних проектов -->
                <ListBox x:Name="RecentProjectsList" Background="Transparent" BorderBrush="#FF3E3E40" 
                         Height="200" Margin="0,0,0,20" Foreground="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="📁" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding}" VerticalAlignment="Center" FontSize="12"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Дополнительные возможности -->
                <StackPanel>
                    <TextBlock Text="Дополнительно" Foreground="#FFCCCCCC" FontSize="14" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                    <Button x:Name="CloneRepoBtn" Content="Клонировать репозиторий" 
                            Background="Transparent" Foreground="White" FontSize="12" 
                            Height="30" Margin="0,0,0,8" BorderBrush="#FF555555" BorderThickness="1">
                        <Button.ToolTip>
                            <ToolTip Content="Клонировать Git репозиторий"/>
                        </Button.ToolTip>
                    </Button>

                    <Button x:Name="HelpBtn" Content="Документация" 
                            Background="Transparent" Foreground="#FFCCCCCC" FontSize="12" 
                            Height="30" Margin="0,0,0,0" BorderBrush="#FF555555" BorderThickness="1" >
                        <Button.ToolTip>
                            <ToolTip Content="Открыть документацию"/>
                        </Button.ToolTip>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Нижний колонтитул -->
        <Border Grid.Row="2" Background="#FF252526" Padding="15" BorderBrush="#FF3E3E40" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Разработано с ❤️ для РПО" Foreground="#FFCCCCCC" FontSize="12"/>
                <TextBlock Text=" • " Foreground="#FF666666" FontSize="12"/>
                <TextBlock Text="Студент 2 курса" Foreground="#FFCCCCCC" FontSize="12"/>
                <TextBlock Text=" • " Foreground="#FF666666" FontSize="12"/>
                <TextBlock Text="v1.0.0" Foreground="#FFCCCCCC" FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>